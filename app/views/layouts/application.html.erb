<!DOCTYPE html>
<html>
<head>
  <title>SocialNetworking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- <div id="ajax-progress" class="progress">
  <div class="progress-bar progress-bar-striped active" style="width: 100%">
    <span class="sr-only">Complete</span>
  </div>
</div> -->
  <div class="myNav">
    <div class="container">
      <div class="row">
        <nav class="navbar navbar-default" role="navigation">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <%= link_to 'SocialNetworking', root_path, :class => "navbar-brand" %>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if current_user %>
                <li class="dropdown">
                  <a href="" class="dropdown-toggle" data-toggle="dropdown">
                    <%= image_tag( ( current_user.user_display_image ), :class => "img-circle") %><%= current_user.user_display_name %> <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to '修改密碼', edit_registration_path(:user) %></li>
                  </ul>
                </li>
                <li><%= link_to '登出', destroy_user_session_path, :method => :delete %></li>
              <% else %>
                <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
                <li><%= link_to '註冊', new_registration_path(:user) %></li>
                <li><%= link_to '登入', new_session_path(:user) %></li>
              <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </nav>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <% if flash[:notice] %>
      <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
      <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
  <div class="maincontent">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>


</body>
</html>
