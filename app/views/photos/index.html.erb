<div class="newPhoto">
  <%= form_for @photo, :url => photos_path do |form| %>
  <div class="form-group">
    <%= form.label :content, "Content" %>
    <%= form.text_area :content, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :avatar %>
  </div>

    <%= form.submit "submit", :class =>"btn btn-primary"  %>
  <% end %>
</div>

<div class="timelineContainer">
  <% @photos.each do |p| %>
  <div class="timelineItem">
    <div class="timelineSidebar">
      <%= timeline_user_avater(p.user) %>
    </div>
    <div class="timelineCenter">
      <div class="mediaPhoto">
        <%= image_tag p.avatar , :class => "img-thumbnail img_responsive"  %>
      </div>

      <div class="timelineContent"><%= p.content %></div>
      <div class="timelineLikes">這裏按讚</div>
      <div class="timelineComments">這裏留言：：：：</div>
    </div>
  </div>
  <% end %>
</div>